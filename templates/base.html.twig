        <style>
            body {
                background-image: linear-gradient(to top,#f0f0f08c,#afbcd2 25%,#0567ff8c);
                background-size: cover;
                background-repeat:no-repeat;
                background-attachment:fixed;}
            content{ display:block; margin:40px auto; max-width:1060px;}
            article{ display:block; margin:0px;}
            section{ display:block; margin:0px;}
            .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
            .image{margin-bottom:20px;}
            .content{padding:20px;}
            article img{ border:0; max-width:100%; padding:0; margin 0;}
            .thumb{background-size:cover; background-position-x: center;
                background-position-y: center; height:200px; width:auto;}
        </style>
        
