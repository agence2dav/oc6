{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_valid in app.flashes('flash-register') %}
        <div class="alert alert-warning" role="alert">{{ flash_valid }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    <div class="form-group">
    {{ form_errors(registerForm) }}

    {{ form_start(registerForm) }}
    
        {{ form_row(registerForm.username, {
            label: 'Nom d\'utilisateur'
        })  }}
        {{ form_row(registerForm.email, {
            label: 'Adresse email'
        }) }}
        {{ form_row(registerForm.plainPassword, {
            label: 'Mot de passe'
        })  }}
        {{ form_row(registerForm.confirmPassword, {
            label: 'Confirmez le mot de passe'
        })  }}

        <button type="submit" class="btn btn-primary">Inscription</button>
    {{ form_end(registerForm) }}
    </div>
{% endblock %}
