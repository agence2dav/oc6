{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    <div class="form-group">
    {{ form_errors(registerForm) }}

    {{ form_start(registerForm) }}
    
        {{ form_row(registerForm.username, {
            label: 'Nom d\'utilisateur'
        })  }}
        {{ form_row(registerForm.email, {
            label: 'Adresse email'
        }) }}
        {{ form_row(registerForm.plainPassword, {
            label: 'Mot de passe'
        })  }}
        {{ form_row(registerForm.confirmPassword, {
            label: 'Confirmez le mot de passe'
        })  }}
        {{ form_row(registerForm.agreeTerms, {
            label: 'Acceptation des conditions d\'utilisation'
        })  }}

        <button type="submit" class="btn btn-primary">Inscription</button>
    {{ form_end(registerForm) }}
    </div>
{% endblock %}
