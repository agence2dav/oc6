{% block create %}
<turbo-stream action="append" target="categories">
    <template>
        <div id="{{ 'category_' ~ id }}">
            #{{ id }} created
        </div>
    </template>
</turbo-stream>
{% endblock %}

{% block update %}
<turbo-stream action="update" target="category_{{ id }}">
    <template>
        #{{ id }} updated
    </template>
</turbo-stream>
{% endblock %}

{% block remove %}
<turbo-stream action="remove" target="category_{{ id }}"></turbo-stream>
{% endblock %}
