{% block create %}
<turbo-stream action="append" target="tricks">
    <template>
        <div id="{{ 'trick_' ~ id }}">
            #{{ id }} created
        </div>
    </template>
</turbo-stream>
{% endblock %}

{% block update %}
<turbo-stream action="update" target="trick_{{ id }}">
    <template>
        #{{ id }} updated
    </template>
</turbo-stream>
{% endblock %}

{% block remove %}
<turbo-stream action="remove" target="trick_{{ id }}"></turbo-stream>
{% endblock %}
